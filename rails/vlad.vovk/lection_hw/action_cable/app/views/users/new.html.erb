<h1>Registration</h1>

<%= form_with model: @user do |f|%>
  <%= f.label       :nickname %>
  <%= f.text_field  :nickname %>

  <%= f.label       :email %>
  <%= f.email_field  :email %>

  <%= f.label           :password %>
  <%= f.password_field  :password %>

  <%= f.label           :password_confirmation %>
  <%= f.password_field  :password_confirmation %>

  <%= f.submit%>
<% end %>